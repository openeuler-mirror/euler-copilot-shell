/* Smart Shell CSS 样式 */

/* 主应用样式 */
EulerCopilot {
    layout: vertical;
}

/* 输出区域样式 - 占据除了输入区域外的所有空间 */
#output-container {
    height: 1fr;
    overflow: auto;
    border: solid #4963b1;
}

/* 输出容器聚焦时的样式 */
#output-container:focus {
    border: solid #688efd;
}

/* 文本区域 */
Static {
    height: auto;
    padding: 1 1;
    border: none;
}

/* 用户输入的命令行样式 */
.command-line {
    color: #688efd;
    padding: 0 1;
}

/* 底部输入区域样式 */
#input-container {
    height: 3;
    dock: bottom;
    padding: 0 1;
    border-top: solid #688efd;
    width: 100%;
}

/* 输入框样式 */
#command-input {
    width: 100%;
    color: #688efd;
    padding: 0 1;
    border: none;
}

/* 设置界面样式 */
#settings-screen {
    align: center middle;
    color: #ffffff;
    padding: 1;
}

/* 设置容器样式 */
#settings-container {
    width: 80%;
    height: 100%;
    border: solid #4963b1;
    padding: 1 2;
}

/* 设置标题样式 */
#settings-title {
    text-align: center;
    color: #4963b1;
    padding-bottom: 1;
}

/* 设置选项样式 */
.settings-option {
    padding: 1 0;
    width: 100%;
    height: auto;
    align: left middle;
}

/* 设置标签样式 */
.settings-label {
    width: 20%;
    content-align: right middle;
    padding-right: 1;
}

/* 设置值样式 */
.settings-value {
    width: 80%;
    content-align: left middle;
}

/* 设置按钮样式 */
.settings-button {
    color: #4963b1;
    border: solid #4963b1;
    width: 40%;
}

/* Horizontal 容器样式，用于设置项的对齐 */
#settings-container Horizontal {
    width: 100%;
    height: auto;
}

/* 退出对话框屏幕样式 */
#exit-dialog-screen {
    align: center middle;
    width: 100%;
    height: 100%;
}

/* 退出对话框样式 */
#exit-dialog {
    align: center middle;
    width: 50%;
    height: 12;
    border: solid #ff5252;
    color: #ffffff;
    margin: 1 1;
    padding: 1;
}

/* 对话框文本样式 */
#dialog-text {
    text-align: center;
    margin-bottom: 1;
    padding: 1;
}

/* 对话框按钮容器 */
#dialog-buttons {
    align: center middle;
    width: 100%;
    height: 3;
    margin-top: 1;
}
